/* component/j-matchItem/index.wxss */
.match {
  margin-top: 16rpx;
  padding: 16rpx;
  display: flex;
  width: 100%;
  flex-direction: column;
  background-color: #fff;
}
.match .detail-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  width: 100%;
  text-align: center;
  color: var(--secondText);
}
.match .detail-top .left-info {
  flex: 2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.match .detail-top .left-info .match-name {
  text-align: left;
  flex: 4;
}
.match .detail-top .left-info .match-time {
  flex: 2;
}
.match .detail-top .match-state {
  flex: 3;
}
.match .detail-top .match-audience {
  flex: 2;
  text-align: right;
}
.match .detail-top .match-audience image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}
.match .detail-middle {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  width: 100%;
  margin: 16rpx 0;
  color: var(--firstText);
}
.match .detail-middle .follow {
  flex: 1;
}
.match .detail-middle .follow .follow-icon {
  display: block;
  float: left;
  width: 24rpx;
  height: 24rpx;
}
.match .detail-middle .match-team {
  flex: 8;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
}
.match .detail-middle .match-team .away-team {
  flex: 4;
  text-align: right;
}
.match .detail-middle .match-team .match-score {
  flex: 2;
  font-size: 28rpx;
  color: var(--secondText);
  text-align: center;
}
.match .detail-middle .match-team .home-team {
  flex: 4;
  text-align: left;
}
.match .detail-middle .match-team .team-icon {
  margin: 0 8rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.match .detail-middle .match-state-icon {
  flex: 1;
}
.match .detail-middle .match-state-icon .state-icon {
  display: block;
  float: right;
  width: 30rpx;
  height: 30rpx;
}
.match .detail-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  color: var(--secondText);
}
.match .detail-bottom .match-round {
  flex: 1;
}
.match .detail-bottom .score-detail {
  flex: 8;
  display: flex;
  flex-direction: row;
}
.match .detail-bottom .score-detail .events {
  flex: 3;
}
.match .detail-bottom .score-detail .round-score {
  flex: 3;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx;
}
.match .detail-bottom .score-detail .round-score .kill {
  padding: 0 6rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: var(--firstText);
}
.match .detail-bottom .space {
  flex: 1;
}
