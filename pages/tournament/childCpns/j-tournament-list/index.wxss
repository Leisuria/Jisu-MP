.tournament-list {
  padding: 32rpx 0;
  width: 100%;
}
.tournament-list .tournament {
  width: 100%;
  height: 128rpx;
  border: 1rpx solid var(--lightLineColor);
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.tournament-list .tournament .left-info {
  margin: 16rpx;
}
.tournament-list .tournament .left-info image {
  float: left;
  width: 96rpx;
  height: 96rpx;
  margin-right: 16rpx;
}
.tournament-list .tournament .left-info .info {
  float: left;
  margin: 8rpx 0;
}
.tournament-list .tournament .left-info .info .name {
  font-size: 28rpx;
  color: var(--firstText);
  width: 400rpx;
}
.tournament-list .tournament .left-info .info .time {
  margin-top: 14rpx;
  font-size: 22rpx;
  color: var(--thirdText);
}
.tournament-list .tournament .right-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: right;
  height: 96rpx;
}
.tournament-list .tournament .right-info .status-live {
  padding-left: 6rpx;
  margin-top: 8rpx;
  color: var(--lightText);
  width: 84rpx;
  height: 40rpx;
  font-size: 20rpx;
  background-color: var(--emphasizeColor);
  border-radius: 20rpx 0 0 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.tournament-list .tournament .right-info .status-wait {
  padding-left: 6rpx;
  margin-top: 8rpx;
  color: var(--lightText);
  width: 84rpx;
  height: 40rpx;
  font-size: 20rpx;
  background-color: var(--themeColor);
  border-radius: 20rpx 0 0 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.tournament-list .tournament .right-info .count {
  margin-right: 8rpx;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: var(--thirdText);
}
