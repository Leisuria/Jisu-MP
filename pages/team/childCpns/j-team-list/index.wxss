.list{
    width: 100%;
}

.team-item{
    height: 96rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    font-size: 24rpx;
    color: var(--firstText);
    padding: 0 16rpx;
    background-color: var(--containerColor);
}
.team-item:nth-child(2n){
    background-color: var(--listColor);
}


.team-item .rank{
    flex: 1;
}
.team-item .change{
    flex: 1;
}
.team-item .team{
    text-align: left;
    flex: 4;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.team-item .team .team-logo{
    display: block;
    width: 60rpx;
    height: 60rpx;
    margin-right: 8rpx;
}
.team-item .region{
    flex: 3;
}
.team-item .region image{
    width: 48rpx;
    height: 48rpx;
}
.team-item .score{
    flex: 1;
}
