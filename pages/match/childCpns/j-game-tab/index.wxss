.game-tab {
    display: flex;
    flex-direction: row;
    height: 88rpx;
    padding: 0 10rpx;
    justify-content: center;
    background-color: var(--containerColor);
    align-items: center;
    border-bottom: 0.5px solid var(--lineColor);
  }
  .game-tab .game-item {
    flex: 1;
    text-align: center;
    margin: 10rpx 10rpx;
    color: var(--firstText);
    font-size: 30rpx;
  }
  .game-tab .active {
    border-radius: 40rpx;
    background-color: var(--themeColor);
    color: var(--lightText);
    padding: 10rpx 0;
  }
  